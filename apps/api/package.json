{
  "name": "@raktamarga/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./router": "./src/router.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/trpc": "^1.1.0",
    "@raktamarga/auth": "workspace:*",
    "@raktamarga/db": "workspace:*",
    "@raktamarga/shared": "workspace:*",
    "@trpc/server": "10",
    "drizzle-orm": "^0.36.4",
    "effect": "^3.12.4",
    "elysia": "^1.1.23",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
