{
  "name": "raktamarga",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter='./apps/*' dev",
    "dev:api": "bun --filter=@raktamarga/api dev",
    "dev:web": "bun --filter=@raktamarga/web dev",
    "dev:mcp": "bun --filter=@raktamarga/mcp dev",
    "build": "bun run --filter='./apps/*' build",
    "start": "bun --filter=\"$RAILWAY_SERVICE_NAME\" run start",
    "start:web": "bun --filter=@raktamarga/web run start",
    "start:api": "bun --filter=@raktamarga/api run start",
    "start:mcp": "bun --filter=@raktamarga/mcp run start",
    "test": "bun run --filter='./apps/*' test && bun run --filter='./packages/*' test",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "bun run --filter='./apps/*' typecheck && bun run --filter='./packages/*' typecheck",
    "index:embeddings": "bun --filter=@raktamarga/embeddings index",
    "index:embeddings:full": "bun --filter=@raktamarga/embeddings index:full"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
