{
  "name": "@raktamarga/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "db:generate": "bun --env-file=../../apps/api/.env run drizzle-kit generate",
    "db:migrate": "bun --env-file=../../apps/api/.env run drizzle-kit migrate",
    "db:studio": "bun --env-file=../../apps/api/.env run drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.36.4",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.6.3"
  }
}
