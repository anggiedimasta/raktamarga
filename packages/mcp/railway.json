{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun run build && bun run --filter=@raktamarga/mcp build"
  },
  "deploy": {
    "startCommand": "MCP_TRANSPORT=sse bun run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
